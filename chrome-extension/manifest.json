{
  "manifest_version": 3,
  "name": "Fronti",
  "version": "1.0.2",
  "description": "Fronti for local development - design and code your projects with AI",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "nativeMessaging",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Open Fronti"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/iframe-bridge.ts"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["editor.html", "assets/*.js", "assets/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
